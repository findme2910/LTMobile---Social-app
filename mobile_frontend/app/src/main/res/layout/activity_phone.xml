<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ui.activities.phone">

    <TableRow
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back_button"
            android:layout_gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="20dp">
        <TextView
            android:text="Số di động của bạn là gì?"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="20dp">
        <TextView
            android:text="Nhập số di động có thể dùng để liên hệ với bạn. Thông tin này sẽ không hiển thị với ai khác trên trang cá nhân của bạn."
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="20dp">
        <EditText
            android:hint="Số di động"
            android:inputType="textMultiLine"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:lines="2"
            android:padding="10dp" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnNext"
            android:text="Tiếp"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/purple_button"
            android:textColor="#FFFFFF" />
    </TableRow>

    <TableRow android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/accountExist"
            android:text="Bạn đã có tài khoản ư?"
            android:textColor="@color/purple_700"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>
    </TableRow>
</TableLayout>