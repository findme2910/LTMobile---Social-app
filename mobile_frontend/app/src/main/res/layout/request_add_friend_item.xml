<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/request_add_friend"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="115dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp"
              tools:ignore="MissingConstraints">


    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/request_add_friend_avatar"
                app:civ_border_width="4dp"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_color="#FFFFFF"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="281dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/request_add_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Le Quang Huy "
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"/>

        <Button
                android:id="@+id/request_add_friend_accept"
                android:layout_width="112dp"
                android:layout_height="34dp"
                android:text="Thêm bạn bè"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:textColor="#FFFFFF"
                android:layout_below="@id/request_add_friend_name"
                android:layout_alignStart="@id/request_add_friend_name"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp" android:visibility="visible"/>

        <Button
                android:id="@+id/request_add_friend_delete"
                android:layout_width="112dp"
                android:layout_height="34dp"
                android:text="Gỡ"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_gray"
                android:textAllCaps="false"
                android:layout_below="@id/request_add_friend_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="13dp"
                android:visibility="visible"/>
        <TextView
                android:id="@+id/request_add_friend_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã gửi lời mời"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/request_add_friend_name"
        />
    </RelativeLayout>

</LinearLayout>